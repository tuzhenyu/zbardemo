<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <tzy.sf.zbarapp.view.ShadeView
        android:id="@+id/shade_top"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="top"/>

    <tzy.sf.zbarapp.view.ShadeView
        android:id="@+id/shade_bottom"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="bottom"/>

    <tzy.sf.zbarapp.view.ShadeView
        android:id="@+id/shade_left"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="86dp"/>

    <tzy.sf.zbarapp.view.ShadeView
        android:id="@+id/shade_right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="86dp"/>

    <tzy.sf.zbarapp.view.BoxView
        android:id="@+id/box_view"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <!-- duration:动画完成一次的时间   refreshRate:动画帧率 -->
    <!--<com.sangfor.pocket.login.activity.AnimateView
        android:id="@+id/grid_animate_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:contentDrawable="@drawable/scan_grid"
        app:duration="1000"
        app:refreshRate="30"/>-->
    <FrameLayout
        android:id="@+id/fl_animate"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_animate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/me_scan_line"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描"
            android:textColor="#77CC33"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描"
            android:textColor="#77CC33"
            android:layout_marginTop="2dp"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"/>
        </LinearLayout>
</FrameLayout>